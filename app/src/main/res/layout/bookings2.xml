<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"

    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/item_list_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
        <ImageView
            android:id="@+id/list_item_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/seat"
           />

        <TextView
            android:id="@+id/list_item_name"
            android:layout_toRightOf="@+id/list_item_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="SEAT:\t"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_name"
            android:layout_marginTop="8dp"
            android:text="1"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_name"
            android:layout_toRightOf="@+id/list_item_photo"
            android:layout_marginTop="3dp"
            android:text="STATUS:\t \t"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />


        <Button
            android:id="@+id/bBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/desc"
            android:text="BOOK"

            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>
