<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_list_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/list_item_photo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/pic" />


        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_photo"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="DATE:\t"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_photo"
            android:layout_toRightOf="@+id/date1"
            android:layout_marginTop="8dp"
            android:text="2/2/2020"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date1"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:text="VEHICLE NAME:\t"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date1"
            android:layout_toRightOf="@+id/name1"
            android:layout_marginTop="12dp"
            android:text="No Name"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/seat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name1"
            android:layout_marginTop="8dp"
            android:text="SEAT:\t"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/seat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/seat1"
            android:layout_below="@+id/name1"
            android:layout_marginTop="8dp"
            android:text="1"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fare1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seat1"
            android:layout_marginTop="8dp"
            android:text="AMOUNT(Kshs):\t"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fare2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seat1"
            android:layout_toRightOf="@+id/fare1"
            android:layout_marginTop="8dp"
            android:text="1"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/fare2"
            android:text="Print Receipt"

            />




    </LinearLayout>
</androidx.cardview.widget.CardView>